<Page x:Class="EasyPay.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasyPay"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Button x:Name="SettingsButton" Content="Settings" HorizontalAlignment="Left" Margin="690,30,0,0" VerticalAlignment="Top" Width="75" Click="SettingsButton_Click"/>
        <TextBox x:Name="CustomerBox" HorizontalAlignment="Left" Text="Customer information will be here" Height="300" Margin="50,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="555"/>
        <TextBox x:Name="SearchBar" HorizontalAlignment="Left" Height="20" Margin="50,30,0,0" TextWrapping="Wrap" Text="Search Bar" VerticalAlignment="Top" Width="280"/>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="360,30,0,0" VerticalAlignment="Top" Width="75" Click="SearchButton_Click"/>

    </Grid>
</Page>
